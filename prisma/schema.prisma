generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  mobile    String   @unique
  password  String
  role      String   @default("CUSTOMER") // ADMIN, CUSTOMER
  address   String?
  orders    Order[]
  createdAt DateTime @default(now())
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    // Bangla Name
  slug      String    @unique
  image     String?
  products  Product[]
}

model Product {
  id          Int         @id @default(autoincrement())
  title       String      // Bangla Title
  slug        String      @unique
  description String
  price       Float
  discountPrice Float?
  stock       Int         @default(0)
  categoryId  Int
  category    Category    @relation(fields: [categoryId], references: [id])
  images      String      // JSON string or comma separated
  orderItems  OrderItem[]
}

model Order {
  id        Int         @id @default(autoincrement())
  userId    Int?        // Optional for guest checkout
  user      User?       @relation(fields: [userId], references: [id])
  total     Float
  status    String      @default("PENDING") // PENDING, PROCESSING, DELIVERED, CANCELLED
  items     OrderItem[]
  customerName    String?
  customerMobile  String?
  shippingAddress String
  createdAt DateTime    @default(now())
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  productId Int
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  sender    String   // Session ID or Mobile
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
}

