generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("USER") // USER, ADMIN
  orders    Order[]
  createdAt DateTime @default(now())
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  slug     String    @unique
  image    String?
  products Product[]
}

model Product {
  id          Int         @id @default(autoincrement())
  title       String
  slug        String      @unique
  description String
  price       Float
  stock       Int
  images      String      // Store array of strings as JSON string
  categoryId  Int
  category    Category    @relation(fields: [categoryId], references: [id])
  orderItems  OrderItem[]
  createdAt   DateTime    @default(now())
}

model Order {
  id              Int         @id @default(autoincrement())
  userId          Int?        // Optional for guest checkout
  user            User?       @relation(fields: [userId], references: [id])
  total           Float
  status          String      @default("PENDING") // PENDING, PROCESSING, DELIVERED, CANCELLED
  items           OrderItem[]
  shippingAddress String
  customerName    String?     // For guest checkout
  customerMobile  String?     // For guest checkout
  createdAt       DateTime    @default(now())
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  productId Int
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
}

model Message {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  mobile    String?
  subject   String
  message   String
  status    String   @default("UNREAD") // UNREAD, READ, REPLIED
  createdAt DateTime @default(now())
}

model Favorite {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  createdAt DateTime @default(now())

  @@unique([userId, productId])
}
